{
  "documentationUrl": "https://docs.airbyte.io/integrations/sources/Bitbucket",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Bitbucket Source Spec",
    "type": "object",
    "required": ["start_date", "repository"],
    "additionalProperties": true,
    "properties": {
      "credentials": {
        "title": "Authentication Mechanism",
        "description": "Choose how to authenticate to Bitbucket",
        "type": "object",
        "oneOf": [
          {
            "type": "object",
            "title": "Authenticate via Bitbucket (OAuth)",
            "required": ["refresh_token, client_id, client_secret"],
            "properties": {
              "option_title": {
                "type": "string",
                "title": "Credentials Title",
                "description": "OAuth Credentials",
                "const": "OAuth Credentials"
              },
              "refresh_token": {
                "type": "string",
                "title": "Access Token",
                "description": "OAuth access token",
                "airbyte_secret": true
              }
            }
          },
          {
            "type": "object",
            "title": "Authenticate via Bitbucket (OAuth)",
            "required": ["client_id", "client_secret"],
            "properties": {
              "option_title": {
                "type": "string",
                "title": "Credentials Title",
                "description": "OAuth Credentials",
                "const": "OAuth Credentials"
              },
              "client_id": {
                "type": "string",
                "title": "Client ID",
                "description": "OAuth Client ID",
                "airbyte_secret": true
              }
              ,
              "client_secret": {
                "type": "string",
                "title": "Client Secret",
                "description": "OAuth Client Secret",
                "airbyte_secret": true
              }
            }
          }
        ]
      },

      "repository": {
        "type": "string",
        "examples": ["indiciumtech/hu-airflow", "indiciumtech/*"],
        "title": "Bitbucket Repositories",
        "description": "Space-delimited list of Bitbucket repositories/organizations, e.g. `airbytehq/airbyte` for single repository and `airbytehq/*` for get all repositories from organization"
      },
      "start_date": {
        "type": "string",
        "title": "Start Date",
        "description": "The date from which you'd like to replicate data for Bitbucket in the format YYYY-MM-DDT00:00:00Z. All data generated after this date will be replicated. Note that it will be used only in the following incremental streams: comments, commits and issues.",
        "examples": ["2021-03-01T00:00:00Z"],
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$"
      },
      "branch": {
        "type": "string",
        "title": "Branch",
        "examples": ["airbytehq/airbyte/master"],
        "description": "Space-delimited list of Bitbucket repository branches to pull commits for, e.g. `airbytehq/airbyte/master`. If no branches are specified for a repository, the default branch will be pulled."
      }
    }
  },
  "authSpecification": {
    "auth_type": "oauth2.0",
    "oauth2Specification": {
      "rootObject": ["credentials", 0],
      "oauthFlowInitParameters": [],
      "oauthFlowOutputParameters": [["access_token"]]
    }
  }
}
